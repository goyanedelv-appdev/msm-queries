<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @the_actor.id %>" class="btn btn-block btn-outline-secondary">
  Delete actor
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

 <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/<%= @the_actor.image %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %>
  </dd>
</dl>

&nbsp;|&nbsp;

<h2> Filmography </h2>

<table border="1">
  <% @character_list.each do |a_char|%>

  <tr>
    <td>
      <% a = Movie.where({ :id => a_char.movie_id}).at(0) %>
      <%= a.title %>
    </td>
    <td>
      <%= a.year %>
    </td>
    <td>
      <% b = a.director_id %>
      <% c = Director.where({ :id => b}).at(0) %>
      <%= c.name %>  
    </td>
    
    <td>
      <%= a_char.name %>
    </td>

    <td>
      <a href="/movies/<%= a_char.movie_id %>">
        Show details
      </a>
    </td>
  </tr> 

  <% end %>
</table>